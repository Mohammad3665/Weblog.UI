@model IEnumerable<Weblog.Core.Domain.Entities.Comment>
@{
    ViewData["Title"] = "Manage Comments";
}
<h2>Comments</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Post</th>
            <th>User</th>
            <th>Text</th>
            <th>Date</th>
            <th>Approved</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.PostId</td>
                <td>@comment.UserId</td>
                <td>@comment.Text</td>
                <td>@comment.CreatedDate.ToShortDateString()</td>
                <td>@comment.IsApproved</td>
                <td>
                    @if (!comment.IsApproved)
                    {
                        <form asp-action="Approve" asp-route-id="@comment.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                    }
                    <form asp-action="Delete" asp-route-id="@comment.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
