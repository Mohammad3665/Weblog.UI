@using Weblog.Core.Domain.Entities
@model Weblog.Core.Domain.Entities.Post
@{
    ViewData["Title"] = "Create Post";
    var categories = ViewBag.Categories as IEnumerable<Weblog.Core.Domain.Entities.Category>;
    Guid categoryId = ViewBag.CategoryId != null ? (Guid)ViewBag.CategoryId : Guid.Empty;

}
<h2>Create Post</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="col-md-12">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" rows="5" class="form-control"></textarea>
    </div>
    <div class="col-md-6">
        <label asp-for="AuthorName" class="form-label"></label>
        <input asp-for="AuthorName" class="form-control" />
    </div>
    <ul class="list-group">
        @foreach (var cat in categories)
        {
            var isSelected = cat.Id == categoryId;
            <li class="list-group-item" value="@cat.Id" selected="@(isSelected ? "selected" : null)">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        @cat.Name
                    </label>
                </div>
            </li>

        }
    </ul>
    <div class="col-md-6">
        <label>Thumbnail</label>
        <input type="file" name="image" class="form-control" />
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
