@using Weblog.Core.Domain.Entities
@model Weblog.Core.Domain.Entities.Post
@{
    ViewData["Title"] = "Create Post";
    var categories = ViewBag.Categories as IEnumerable<Weblog.Core.Domain.Entities.Category> ?? new List<Category>();

    Guid categoryId = Model != null ? Model.CategoryId : Guid.Empty;
}

<h2>Create Post</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" rows="5" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="AuthorName" class="form-label"></label>
        <input asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div class="col-md-12 mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <div class="list-group">
            @if (categories.Any())
            {
                @foreach (var cat in categories)
                {
                    <div class="list-group-item">
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   name="CategoryId"
                                   id="category_@cat.Id"
                                   value="@cat.Id"
                                   checked="@(cat.Id == categoryId ? "checked" : null)">

                            <label class="form-check-label" for="category_@cat.Id">
                                @cat.Name
                            </label>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-warning">please choose an category</p>
            }
        </div>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label>Thumbnail</label>
        <input type="file" name="image" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
    </div>
</form>



