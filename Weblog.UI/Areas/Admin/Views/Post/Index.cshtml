@model IEnumerable<Weblog.Core.Domain.Entities.Post>

<h2>Manage Posts</h2>
<a asp-area="Admin" asp-controller="Post" asp-action="Create">+ Create New Post</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.CreatedDate</td>
                <td>
                    <a asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id">Edit</a> |
                    <form asp-area="Admin" asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
