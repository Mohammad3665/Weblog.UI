@model IEnumerable<Weblog.Core.Domain.Entities.Post>

@{
    ViewData["Title"] = "Home";
    var categories = ViewBag.Categories as IEnumerable<Weblog.Core.Domain.Entities.Category>;
    var searchTerm = ViewBag.SearchTerm as string;
    Guid categoryId = ViewBag.CategoryId != null ? (Guid)ViewBag.CategoryId : Guid.Empty;
}

<h2 class="mb-4">Blog Posts</h2>

<!-- Search & Filter Form -->
<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Search by title or content..." />
    </div>
    <div class="col-md-4">
        <select name="categoryId" class="form-select">
            <option value="">-- All Categories --</option>
            @foreach (var cat in categories)
            {
                var isSelected = cat.Id == categoryId;

                <option value="@cat.Id" selected="@(isSelected ? "selected" : null)">@cat.Name</option>
            }

        </select>
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>

<!-- Post List -->
<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl" class="card-img-top" alt="@post.Title" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="text-muted">@post.CreatedDate.ToShortDateString() | @post.AuthorName</p>
                        <p>@(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)</p>
                        <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p class="text-muted">No posts found.</p>
        </div>
    }
</div>
