@model IEnumerable<Weblog.Core.Domain.Entities.Post>
@{
    ViewData["Title"] = "Search";
}
<h2>Search Results</h2>

@if (Model.Any())
{
    <div class="list-group">
        @foreach (var post in Model)
        {
            <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="list-group-item list-group-item-action">
                <h5>@post.Title</h5>
                <p class="text-muted">@post.CreatedDate.ToShortDateString() | @post.AuthorName</p>
            </a>
        }
    </div>
}
else
{
    <p>No posts found for your search.</p>
}
